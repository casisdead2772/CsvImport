{% extends '/base/base.html.twig' %}
{% block body %}
    <div class="container">
    <div class="row align-items-center py-5 text-center justify-content-center">
    <div class="col-lg-7">
        <div class="card bg-light">
            <h2 class="card-header dark text-white py-3">
                Results of {{ message.id }} message
            </h2>
            <div class="card-body">
                <h3 class="card-title my-3">
                    This message end
                    with {% if(message.status == 1) %} errors {% elseif (message.status == 2) %} success {% endif %}
                </h3>
                {% if(message.status == 1) %}
                    <p class="card-text">Error info: {{ error }}</p>
                {% else %}
                    <p class="card-text">You can check failures for this file</p>
                    <a href="{{ path('failures', { 'id': message.id }) }}" class="btn btn-outline-secondary">Check
                        failures</a>
                    <a href="{{ path('unsuited', { 'id': message.id }) }}" class="btn btn-outline-secondary">Check
                        unsuited</a>
                {% endif %}
            </div>
        </div>
    </div>
    </div>
    </div>
{% endblock %}
